  {% assign short_desc = product.description | split: "Product Description" | first %}
  {% assign full_desc = product.description | split: "Product Description" | last | split: "Specifications" | first %}
  {% assign specifications = product.description | split: "Specifications" | last %}
  <script>
    window.product = {{ product | json }} || {};
  </script>

  <section class="single-product">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">{{ product.title }}</li>
            </ol>
          </nav>
        </div>
      </div>

      <div class="row pb-5">
        <div class="col-md-5">
          <div class="single-product-images">
            {% for image in product.images %}
              <div data-thumb="{{ image.src | img_url: '1920x' }}">
                <img class="img-fluid" src="{{ image.src | img_url: 'master' }}" alt="">
              </div>
            {% endfor %}
          </div>
        </div>

        <div class="col-md-7">
          <div class="single-product-details">
            <h2>{{ product.title }}</h2>
            <p class="product-price">{{ product.price | money }}</p>
            
            <p class="product-description">
              {{ short_desc }}
            </p>

            {% render 'product-form' %}

          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Details</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Specifications</a>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
              <h4>Product Description</h4>
              <p>{{ full_desc }}</p>
            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
              {{ specifications }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>