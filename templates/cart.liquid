<section class="cart-area section" style="min-height: 55vh;">
  <div class="cart shopping">
    <div class="container">
      <div class="row">
        <div class="col-md-10 offset-1">
          <div class="block">
            <div class="product-list">
              <form method="post">
                <table class="table">
                  <thead>
                    <tr>
                      <th>Item Name</th>
                      <th>Quantity</th>
                      <th>Item Price</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>

                    {% for item in cart.items %}
                    <tr>
                      <td>
                        <div class="product-info">
                          <img width="80" src="{{ item.image | product_img_url: 'master' }}" alt="">
                          <a href="{{ item.url }}">{{ item.title }}</a>
                        </div>
                      </td>
                      <td width="100">
                        <input type="number" name="updates[]" value="{{ item.quantity }}" min="0" pattern="[0-9]" class="form-control">
                      </td>
                      <td>{{ item.price | money }}</td>
                      <td>
                        <a class="product-remove" href="/cart/change?line={{forloop.index}}&quantity=0" rel="{{item.id}}">Remove</a>
                      </td>
                    </tr>
                    {% endfor %}

                  </tbody>
                </table>
                <div class="row justify-content-end cart-total">
                  <div class="col-md-2">
                    Total
                  </div>
                  <div class="col-md-2">
                   {{ cart.total_price | money }}
                  </div>
                </div>
                <input type="submit" name="checkout" class="btn btn-main pull-right" value="checkout">
                <input type="submit" name="update" id="update-btn" class="btn btn-transparent pull-right" value="Update">
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>