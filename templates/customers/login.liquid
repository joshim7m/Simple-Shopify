

<section class="login section">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2 class="heading-text">Login</h2>
        {% form 'customer_login' %}

					{{ form.errors | default_errors }}

          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
              <input type="email" placeholder="Your Email" class="form-control" name="customer[email]" id="email">
            </div>
          </div>
          
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
              <input type="password" placeholder="Password" class="form-control" name="customer[password]" id="password">
            </div>
          </div>

          <input type="submit" class="btn btn-main" value="Login">
          <span class="forgot-password-text">Forgot your password?</span>
        </form>
      </div>

      <div class="col-md-6">
        <h2 class="heading-text">Register</h2>
        <form id="contact-form" method="post" action="" role="form">
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">First Name</label>
            <div class="col-sm-9">
              <input type="text" placeholder="First Name" class="form-control" name="first-name" id="first-name">
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-3 col-form-label">Last Name</label>
            <div class="col-sm-9">
              <input type="text" placeholder="Last Name" class="form-control" name="last-name" id="last-name">
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-3 col-form-label">Email <span class="req">*</span></label>
            <div class="col-sm-9">
              <input type="email" placeholder="Your Email" class="form-control" name="email" id="email">
            </div>
          </div>
          
          <div class="form-group row">
            <label class="col-sm-3 col-form-label">Password <span class="req">*</span></label>
            <div class="col-sm-9">
              <input type="password" placeholder="Password" class="form-control" name="password" id="password">
            </div>
          </div>

          <input type="submit" class="btn btn-main float-right" value="Register">
        </form>
      </div>
    </div>
  </div>
</section>
{% endform %}